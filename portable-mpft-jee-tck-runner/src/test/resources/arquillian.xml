<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <container qualifier="wildfly" default="true">
        <configuration>
            <property name="chameleonTarget">wildfly:10.1.0.Final:managed</property>
            <property name="chameleonDistributionDownloadFolder">${chameleon.distribution.dir}</property>
            <property name="serverConfig">standalone.xml</property>
        </configuration>
    </container>
    <container qualifier="remote-wildfly-10">
        <configuration>
            <property name="chameleonTarget">wildfly:10.1.0.Final:remote</property>
            <property name="username">${server.username}</property>
            <property name="password">${server.password}</property>
            <property name="managementAddress">${server.ip}</property>
            <property name="managementPort">${server.managementPort}</property>            
        </configuration>
    </container>
    <container qualifier="glassfish">
        <configuration>
            <property name="chameleonTarget">glassfish:4.1.2:managed</property>
        </configuration>
    </container>
</arquillian>